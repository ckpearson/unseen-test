@page
@model IndexModel
@{
    ViewData["Title"] = "Submission";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3>String Submission</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger")" role="alert">
                            @Model.Message
                        </div>
                    }
                    
                    <form method="post">
                        <div class="mb-3">
                            <label for="inputString" class="form-label">Enter your string:</label>
                            <input type="text" class="form-control" id="inputString" 
                                   asp-for="InputString" placeholder="Type your string here..." required>
                            <span asp-validation-for="InputString" class="text-danger"></span>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
